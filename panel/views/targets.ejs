<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MetaSal - Hedefler</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <nav class="sidebar">
        <div class="sidebar-header">
            <h2>MetaSal</h2>
        </div>
        <ul class="nav-links">
            <li>
                <a href="/dashboard">üìä Dashboard</a>
            </li>
            <li>
                <a href="/accounts">üë§ Hesaplar</a>
            </li>
            <li class="active">
                <a href="/targets">üéØ Hedefler</a>
            </li>
            <li>
                <a href="/posts">üìù G√∂nderiler</a>
            </li>
        </ul>
        <div class="sidebar-footer">
            <a href="/logout" class="logout-btn">üö™ √áƒ±kƒ±≈ü</a>
        </div>
    </nav>

    <main class="content">
        <div class="page-header">
            <h1>Sayfa / Grup Hedefleri</h1>
        </div>

        <% if (error) { %>
            <div class="alert alert-error">
                <%= error %>
            </div>
            <% } %>
                <% if (success) { %>
                    <div class="alert alert-success">
                        <%= success %>
                    </div>
                    <% } %>

                        <div class="card">
                            <div class="card-header">
                                <h3>Yeni Hedef Ekle</h3>
                            </div>
                            <div class="card-body">
                                <form action="/targets/add" method="POST" class="inline-form">
                                    <div class="form-group">
                                        <select name="type" required>
                                            <option value="">Tip Se√ßin</option>
                                            <option value="page">Sayfa</option>
                                            <option value="group">Grup</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <input type="url" name="url" placeholder="Facebook URL" required>
                                    </div>
                                    <div class="form-group">
                                        <input type="text" name="name" placeholder="ƒ∞sim (opsiyonel)">
                                    </div>
                                    <button type="submit" class="btn btn-primary">Ekle</button>
                                </form>
                            </div>
                        </div>

                        <div class="card">
                            <div class="card-header">
                                <h3>Hedef Listesi</h3>
                            </div>
                            <div class="card-body">
                                <table class="data-table">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Tip</th>
                                            <th>URL</th>
                                            <th>ƒ∞sim</th>
                                            <th>Durum</th>
                                            <th>ƒ∞≈ülemler</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if (targets.length===0) { %>
                                            <tr>
                                                <td colspan="6" class="text-center">Hen√ºz hedef eklenmedi</td>
                                            </tr>
                                            <% } %>
                                                <% targets.forEach(function(target) { %>
                                                    <tr>
                                                        <td>
                                                            <%= target.id %>
                                                        </td>
                                                        <td>
                                                            <%= target.type==='page' ? 'üìÑ Sayfa' : 'üë• Grup' %>
                                                        </td>
                                                        <td><a href="<%= target.url %>" target="_blank" class="link">
                                                                <%= target.url.substring(0, 40) %>...
                                                            </a></td>
                                                        <td>
                                                            <%= target.name || '-' %>
                                                        </td>
                                                        <td>
                                                            <span
                                                                class="status-badge <%= target.status === 'liked' ? 'success' : target.status === 'failed' ? 'danger' : 'warning' %>">
                                                                <%= target.status==='liked' ? 'Beƒüenildi' :
                                                                    target.status==='failed' ? 'Ba≈üarƒ±sƒ±z' : 'Bekliyor'
                                                                    %>
                                                            </span>
                                                        </td>
                                                        <td class="actions">
                                                            <form action="/targets/retry/<%= target.id %>" method="POST"
                                                                style="display:inline">
                                                                <button type="submit"
                                                                    class="btn btn-sm btn-warning">Yeniden Dene</button>
                                                            </form>
                                                            <form action="/targets/delete/<%= target.id %>"
                                                                method="POST" style="display:inline"
                                                                onsubmit="return confirm('Bu hedefi silmek istediƒüinize emin misiniz?')">
                                                                <button type="submit"
                                                                    class="btn btn-sm btn-danger">Sil</button>
                                                            </form>
                                                        </td>
                                                    </tr>
                                                    <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
    </main>
</body>

</html>